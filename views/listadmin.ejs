<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
  <% newListItems.forEach(function(listItem){ %>
  <form action="/completed" method="post">
      <div class="item">
        <% if (listItem.topic){ %>
           <input type="checkbox" name="checkbox" value="<%=listItem._id%>" onChange="this.form.submit()">
        <% } %>
        <p><%=  listItem.name + "  " + listItem.timestamp%></p>
      </div>
    <input type="hidden" name="listItem" value="<%= listItem.name %>"></input>
    <input type="hidden" name="listTimestamp" value="<%= listItem.timestamp %>"></input>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
<% }) %>

      <form class="item" action="/admin" method="post">
        <input type="checkbox" name="topic" value="aa">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>

  </div>

<%- include("footer") -%>
